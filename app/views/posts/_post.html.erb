<tr>
  <td>
    <%= post.id %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td>
    <%= post.user.full_name %>
  </td>
  <td>
    <%= truncate(post.rationale) %>
  </td>
  <td>
    <%= post.status %>
  </td>
  <td>
    <%= link_to 'Edit', edit_post_path(post)%>
  </td>
  <td>
    <%= link_to 'Delete', post_path(post), method: :delete, id: 'Delete', data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
