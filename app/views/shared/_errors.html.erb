<% if  act_rec_obj.errors.any? %>
    <div class = "row" >
      <div class = "alert alert-error span8">
        <h5>There are some errors:</h5>
        <ul>
          <% act_rec_obj.errors.full_messages.each do |msg| %>
              <li> <%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
<% end %>

